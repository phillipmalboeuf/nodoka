<div class="text_center max_width max_width--center">
  <h1 class="h1--massive">{{ article.title }}</h1>

  {% if section.settings.blog_show_author %}
    <strong>{{ 'blogs.article.by_author' | t: author: article.author }}</strong>
  {% endif %}

  {% if section.settings.blog_show_date %}
    <em>{{ article.published_at | time_tag: format: 'month_day_year' }}</em>
  {% endif %}
</div>

<div class="padded medium_top medium_bottom full_images">
  {% if article.image %}
  {% include 'picture', image: article.image, crop: 0.42 %}
  {% endif %}
</div>

<div class="padded max_width max_width--center">
  {{ article.content }}
</div>

{% if section.settings.show_share_buttons %}
  {% include 'social-sharing', share_title: article.title, share_permalink: article.url, share_image: article.image %}
{% endif %}

<div class="padded medium_top">
  <h2 class="text_center"><a href="{{ blog.url }}">More {{ blog.title }} ↓</a></h2>
</div>



{% schema %}
{
  "name": {
    "de": "Posts",
    "en": "Posts",
    "es": "Publicaciones",
