<!doctype html>
<html lang="{{ shop.locale }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_button }}">
  <meta name="turbolinks-cache-control" content="no-cache">
  <link rel="canonical" href="{{ canonical_url }}">

  {% comment %} {% if settings.favicon != blank %}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
  {% endif %} {% endcomment %}

  <title>
    {{ shop.name }}
  </title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  {% include 'social-meta-tags' %}

  {% comment %} <style>
    {{ settings.type_header_font | font_face }}
    {{ settings.type_base_font | font_face }}
  </style> {% endcomment %}

  <link rel="stylesheet" href="https://rsms.me/inter/inter-ui.css">
  {% comment %} {{ 'app.css' | asset_url | stylesheet_tag }} {% endcomment %}
  <link rel="stylesheet" href="https://localhost:8081/app.css">

  {{ content_for_header }}

  {% comment %} <script src="{{ 'app.js' | asset_url }}" defer="defer"></script> {% endcomment %}
  <script src="https://localhost:8081/app.js" defer></script>
</head>

<body>

  {% section 'header' %}

  <div id="scripts"></div>
  <main role="main">
    {{ content_for_layout }}
  </main>

  {% section 'footer' %}
</body>
</html>
